<p id="notice"><%= notice %></p>
<div id="container">
<h3 class="title-reg is-2">Events</h3>

<div class="centered">
    <section class="cards">
      <% @events.each do |event| %>
        <article class='card'>
          <p class="title"><%= event.title %></p>
          <p class='body'><%= event.place %></p>
          <p class='date'><%= event.date %></p>
          <span><%= link_to 'Show', event_path(event) %>||</span>
          <span><%= link_to 'Edit', edit_event_path(event) %>||</span>
          <span><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </article>
      <% end %>
    </section>
  </div>

<br>

<%= link_to 'New Event', new_event_path %>
