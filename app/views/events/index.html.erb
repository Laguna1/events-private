<p id="notice"><%= notice %></p>
<div id="container">

<h3 class="title-reg is-2">All Events</h3>

<div class="centered">
    <section class="cards">
      <% @events.each do |event| %>
        <article class='card'>
          <% if signed_in? %>
            <p>Creator: <%= event.creator.name %></p>
          <% end %>
          <p class="event">What: <%= event.title %></p>
          <p class='body'>Where: <%= event.place %></p>
          <p class='date'>When: <%= event.date %></p>
          <span><%= link_to 'Show', event_path(event) %>||</span>
          <span><%= link_to 'Edit', edit_event_path(event) %>||</span>
          <span><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></span>
           <p><%= visit_event_btn(@event) %></p>
          <p>*  *  *  *  *</p>
        </article>
      <% end %>
    </section>
  </div>

<br>

<%= link_to 'New Event', new_event_path %>
